@model List<Bsef19a041_Project.Models.Products>
<style>
    #c1{
            background-color: orangered;
         margin-left:15px;
         margin-top:15px;    
         
        }
</style>
  @foreach (Bsef19a041_Project.Models.Products p in Model)
        {           
         <div class="card" id="c1" style="display:inline-block; justify-content:space-around; width: 18rem;">
  <img src="~/css/b1 (8).png" class="card-img-top">
  <div class="card-body">
    <h5 class="card-title">@p.ImageName</h5>
    <p class="card-text"> Price RS @p.Price</p>
    <a type="button" class="btn btn-dark"id="b_@p.Id" asp-controller="Cart" asp-action="AddToCart" asp-route-Id="@p.Id" >Add To Cart </a>
    </div>
    </div>
        }