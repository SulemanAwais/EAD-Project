@model List<Bsef19a041_Project.Models.Products>
@{
    Layout = "~/Views/Shared/_layout.cshtml";
}
@section Options{
    <partial name="_adminNavOptionsPartialView" />

}
<style>
    body{
        background-color:black;
    }
</style>
<div class="container mt-3">
  <h2></h2>  <table class="table table-dark table-hover">
    <thead>
      <tr>
          <th>ID</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Edit Product</th>
        <th>Delete Product</th>



      </tr>
    </thead>
    <tbody>
        @foreach (Bsef19a041_Project.Models.Products P in Model)
        {
            <tr>
                @*<td> @P.ImageName.Remove(P.ImageName.Length-4,4)</td>*@
                <td>@P.Id .</td>
                <td> @P.ImageName.Remove(P.ImageName.Length-4,4)</td>
                <td>@P.Price</td>

                <td>  <a class="btn btn-light" asp-controller="Admin" asp-route-id="@P.Id" asp-action="EditProduct" type="button">Edit</a></td>
                <td>  <a class="btn btn-danger" asp-controller="Admin" asp-route-id="@P.Id" asp-action="DeleteProduct" type="button">Delete</a></td>

            </tr>
        }
    </tbody>
</table>
</div>